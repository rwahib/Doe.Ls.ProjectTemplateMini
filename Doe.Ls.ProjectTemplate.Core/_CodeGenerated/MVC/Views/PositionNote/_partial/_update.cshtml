 <div class="form-group @GetFormGroupClass("PositionId")">
  <label for="PositionId" class="col-lg-4">@Html.DisplayNameFor(model => model.PositionInformation) <span class="mandatory">*</span></label>
  @Html.DropDownList("PositionId", positionInformationItems , "Select Position information ...", new {id="PositionId", @class = "form-control col-lg-8 select2picker", Required="Required" })      

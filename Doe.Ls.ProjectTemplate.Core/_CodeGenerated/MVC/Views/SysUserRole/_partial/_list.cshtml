 



@model IEnumerable<SysUserRole>
@{    
    ViewBagWrapper.InfoBag.SetTitle("Sys user role List",ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
}


        <div class="table-responsive">
            <table class="table table-striped table-condensed dt-responsive @*ajaxDataTable*@" @*data-service="sysUserRoleService" data-url="@Url.Action("ListJson")"*@>
                @*<caption>Sys user role list</caption>*@
                <thead>
                    <tr>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.SysUser)
                        </th>
                                 
                        
                        <th>
                            @Html.DisplayNameFor(model => model.SysRole)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.StructureId)
                        </th>
                                 
                        
                        <th>
                            @Html.DisplayNameFor(model => model.OrgLevel)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.ActiveFrom)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.ActiveTo)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.Note)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.LastModifiedDate)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.LastModifiedBy)
                        </th>
                                 
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody>
                    @* For ajax dataTable empty the tbody *@
                    @foreach (var item in Model) 
                    {
                       <tr>
                            <td>
    
                                @Html.Raw(item.SysUser.FirstName.StripHtml().Minimise(50))
                            <td>
    
                                @Html.Raw(item.SysRole.RoleApiName.StripHtml().Minimise(50))
                            <td>
   
                                @Html.DisplayFor(modelItem => item.StructureId)
                            </td>                       
                            <td>
    
                                @Html.Raw(item.OrgLevel.OrgLevelName.StripHtml().Minimise(50))
                            <td>
   
                                @item.ActiveFrom.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @item.ActiveTo.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>                       
                            <td>
   
                                @item.CreatedDate.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>                       
                            <td>
   
                                @item.LastModifiedDate.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.LastModifiedBy)
                            </td>                       
                            <td>
                                <div class="btn-group-vertical">
                                    <a href="@Url.Action("Edit", new { userId = item.UserId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Edit</a>
                                    <a href="@Url.Action("Details", new { userId = item.UserId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Details</a>
                                    <a href="@Url.Action("Delete", new { userId = item.UserId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


@model UserRoleModel
@{ 

    ViewBagWrapper.InfoBag.SetTitle("Delete " + Model.UserRole.GetDescription() + " user", ViewData);
    var formType = ViewBagWrapper.FormOperations.GetFormType(ViewData);

    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
    
}

<div class="page-header">
    <h2>@ViewBagWrapper.InfoBag.GetTitle(ViewData)</h2>
</div>

<h3>Are you sure you want to delete this user role?</h3>

<div id="formTab" class="card.card-body">
    <form class="" role="form" method="POST" id="form-sysUserRole-delete">
        
        @Html.Partial("_partial/_details")
        
        <p>
            <button type="submit" class="btn btn-primary">Delete</button> 
            &nbsp;|&nbsp; 
            <a href="@Url.Content(UserRoleController.GetListActionName(Model.RoleId))" class="btn btn-primary">Cancel <span class="glyphicon glyphicon-th-list"></span></a>
        </p>
    </form>
</div>


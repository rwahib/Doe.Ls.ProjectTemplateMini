@functions
{


    private string GetUrlWithToken(string url, bool absolute = false)
    {
        if (!absolute)
        {
            url = ProjectTemplateSettings.Site.AppUrl + url;
        }

        return string.Format("{0}?token={1}", url, AppCacheHelper.Token);
    }
}
 



@model IEnumerable<CapabilityName>
@{    
    ViewBagWrapper.InfoBag.SetTitle("Capability name list",ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
    var groupItems = ViewBagWrapper.ListBag.GetList("capabilityGroupItems", ViewData);
}

<div class="spacer"></div>
<div class="row ">
    <div class="col-lg-12">
        <div class="">
                <div class="card-filter" id="show-hide-filter-0">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                <a href="#collapse-filter-0" class="collapsed" data-toggle="collapse">Advanced filter</a>
                            </h4>
                        </div>
                        <div id="collapse-filter-0" class="panel-collapse collapse">
                            <div class="card-body">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="CapabilityGroupSearchParam" class="col-form-label col-lg-4">Capability Group</label>
                                        <div class="col-lg-8">
                                            <select id="CapabilityGroupSearchParam" name="CapabilityGroupSearchParam"
                                                    class="form-control select2picker" allowclear="true" data-placeholder="Please select Capability Group">
                                                <option></option>
                                                @foreach (var item in groupItems)
                                                {
                                                    <option value="@item.Value">@item.Text</option>

                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



        <div class="table-responsive">
            <table class="table table-striped table-sm dt-responsive ajaxDataTable" data-service="capabilityNameService" data-url="@HttpHelper.GetActionUrl("ListJson","CapabilityName")">
                @*<caption>Capability name list</caption>*@
                <thead>
                    <tr>
                     <th>
                            @Html.DisplayNameFor(model => model.CapabilityNameId)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CapabilityDescription)
                        </th>
                                 
                        
                        <th>
                            @Html.DisplayNameFor(model => model.CapabilityGroup)
                        </th>
                                 
                  
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody>
                  @*  $1$ For ajax dataTable empty the tbody #1#
                    @foreach (var item in Model) 
                    {
                       <tr>
                            <td>
   
                                @Html.DisplayFor(modelItem => item.CapabilityNameId)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.CapabilityDescription)
                            </td>                       
                            <td>
    
                                @Html.Raw(item.CapabilityGroup.GroupName.StripHtml().Minimise(50))
                                       
                            <td>
                                <div class="btn-group-vertical">
                                    <a href="@Url.Action("Edit", new { id = item.CapabilityNameId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.CapabilityNameId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.CapabilityNameId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }*@
                </tbody>
            </table>
        </div>


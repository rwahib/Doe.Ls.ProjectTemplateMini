 
@model IEnumerable<Position>
@{    
    ViewBagWrapper.InfoBag.SetTitle("Position list",ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
}


        <div class="table-responsive">
            <table class="table table-striped table-sm dt-responsive ajaxDataTable" data-service="positionService" data-url="@HttpHelper.GetActionUrl("ListJson","Position")">
                @*<caption>Position list</caption>*@
                <thead>
                    <tr>
                      
                        <th>
                            @Html.DisplayNameFor(model => model.PositionNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PositionTitle)
                        </th>
                     
                        <th>
                            Report to
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit)
                        </th>
                        <th>
                           Grade
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.PositionLevel)
                        </th>
                        <th>
                            Doc Number
                        </th>
                       @if (!user.IsDoEUser)
                       {
                           <th>
                               Status
                           </th>
                       }
                       else
                       {
                        <th  class="never">
                            Status
                        </th>
                       }
                        <th class="none">
                            @Html.DisplayNameFor(model => model.PositionInformation.EmployeeTypeCode)
                        </th>
                        <th class="none">
                            @Html.DisplayNameFor(model => model.PositionInformation.OccupationTypeCode)
                        </th>
                        <th class="none">
                            @Html.DisplayNameFor(model => model.PositionInformation.PositionType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastModifiedDate)
                        </th>
                                 
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody>
               
                @* For ajax dataTable empty the tbody *@
               
                </tbody>
            </table>
        </div>


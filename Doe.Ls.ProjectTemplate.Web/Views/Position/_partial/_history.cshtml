@model Doe.Ls.ProjectTemplate.Data.Position
@{
    var historyList = ViewBagWrapper.GetGeneralObject<IEnumerable<PositionHistory>>("historyList", ViewData);
}
<div class="spacer-small"></div>
<div class="table-responsive" id="wrapper-PositionHistory">
    <table id="positionsHistoryTable" data-order='[]' class="table table-striped table-sm dt-responsive @*ajaxDataTable*@" @*data-service="positionHistoryService" data-url="@HttpHelper.GetActionUrl("ListJson","Position")"*@>
        <thead>
        <tr>
            <th>Action</th>
            <th>Status from</th>
            <th>Status to</th>
            <th>Additional info</th>
            <th>Date created</th>
            <th>Created by</th>
        </tr>
        </thead>
        <tbody>
            @* For ajax dataTable empty the tbody *@
            @if (Model != null && historyList.Any())
            {
                foreach (var i in historyList)
                {
                    <tr>
                        <td>@i.Action</td>
                        <td>@i.StatusFrom</td>
                        <td>@i.StatusTo</td>
                        <td>@i.AdditionalInfo</td>
                        <td>@i.CreatedDate</td>
                        <td>@i.CreatedBy</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



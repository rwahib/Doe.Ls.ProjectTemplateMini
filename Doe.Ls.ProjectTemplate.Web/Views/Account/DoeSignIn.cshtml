@model Doe.Ls.ProjectTemplate.Core.BL.Models.Extensions.UserInfoExtension


@{
    ViewBagWrapper.InfoBag.SetTitle("Log in", ViewData);
    
}


<form class="" data-tracking-enabled="true" role="form" method="POST" id="form-test-signin">
    @Html.AntiForgeryToken()
    <br/>
    @*<div class="alert alert-warning text-center" role="alert">
        This is a Temporary Signin Page for DoE Users. In Production this page will be replaced by the portal
    </div>
    <br/>*@
    <div class="form-group">
        <label for="UserName" class="col-form-label col-lg-2">@Html.DisplayNameFor(model => model.UserName) <span class="mandatory">*</span></label>

        <div class="col-lg-4">
            <div class="input-group">
                
                <input type="text" name="UserName" id="UserName" class="form-control" placeholder="e.g. john.smith" autocomplete="on"
                       value="" required data-fv-notempty-message="The user name is required"/>
                @*@Model.UserName*@
                
            </div>
        </div>
    </div>


    <p>
        <button type="submit" class="btn btn-primary col-lg-offset-2">Log in</button>
    </p>

    @if (ProjectTemplateSettings.Site.IsTestSite)
    {
        <div class="col-lg-offset-2">
            <!-- Button trigger modal -->
            <button type="button" class="btn  btn-primary " data-toggle="modal" data-target="#sampleUserModal" data-backdrop='static' data-keyboard='false'>Sample Users</button>
        </div>
    }
    <br/>
    <br/>
    <!-- Modal -->
    <div class="modal fade" id="sampleUserModal" tabindex="-1" role="dialog" aria-labelledby="sampleUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
             
                <div class="modal-header">
                    <h5 class="modal-title" id="sampleUserModalLabel">Use one of these Sample Users!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#215;</span>
                    </button>
                </div>


                <div class="modal-body">
                    @Html.Partial("~/Views/Account/_sampleUsers.cshtml")
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</form>




@model IEnumerable<LookupFocusGradeCriteria>
@{
    ViewBagWrapper.InfoBag.SetTitle("Lookup focus grade criteria list", ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
    var gradeItems = ViewBagWrapper.ListBag.GetList("gradeItems", ViewData);
    var focusItems = ViewBagWrapper.ListBag.GetList("focusItems", ViewData);
}
<div class="spacer"></div>
<div class="row ">
    <div class="col-lg-12">

        <div class="card-filter" id="show-hide-filter-0">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <a href="#collapse-filter-0" class="collapsed" data-toggle="collapse">Filter by grade and focus</a>
                    </h4>
                </div>
                <div id="collapse-filter-0" class="panel-collapse collapse">
                    <div class="card-body">


                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="GradeCodeSearchParam" class="col-form-label col-lg-4">Grade</label>
                                <div class="col-lg-8">
                                    <select id="GradeCodeSearchParam" name="GradeCodeSearchParam"
                                            class="form-control select2picker" allowclear="true" data-placeholder="Please select Grade">
                                        <option></option>
                                        @foreach (var item in gradeItems)
                                        {
                                            <option value="@item.Value">@item.Text</option>

                                        }
                                    </select>


                                    @* @Html.DropDownList("GradeCode", gradeItems, "Please select Grade", new {id = "GradeCode", @class = "form-control select2picker", data_allow_Clear = "true"})*@
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">

                            <div class="form-group">
                                <label for="FocusIdSearchParam" class="col-form-label col-lg-4">Focus</label>
                                <div class="col-lg-8">
                                    <select id="FocusIdSearchParam" name="FocusIdSearchParam"
                                            class="form-control select2picker" allowclear="true" data-placeholder="Please select Focus">
                                        <option></option>
                                        @foreach (var item in focusItems)
                                        {
                                            <option value="@item.Value">@item.Text</option>

                                        }
                                    </select>

                                    @*  @Html.DropDownList("FocusId", focusItems, "Please select Focus", new { id = "FocusId", @class = "form-control select2picker",  data_allow_Clear = "true" })*@
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row ">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-sm dt-responsive ajaxDataTable" data-service="lookupFocusGradeCriteriaService" data-url="@HttpHelper.GetActionUrl("ListJson","LookupFocusGradeCriteria")">
                @*<caption>Lookup focus grade criteria list</caption>*@
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Focus)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.SelectionCriteria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsMandatory)
                        </th>
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>

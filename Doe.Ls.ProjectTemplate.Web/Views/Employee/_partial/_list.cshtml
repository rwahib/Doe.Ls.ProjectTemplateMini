 



@model IEnumerable<Employee>
@{    
    ViewBagWrapper.InfoBag.SetTitle("Employee list",ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
}


        <div class="table-responsive">
            <table class="table table-striped table-sm dt-responsive @*ajaxDataTable*@" @*data-service="employeeService" data-url="@HttpHelper.GetActionUrl("ListJson","Employee")"*@>
                @*<caption>Employee list</caption>*@
                <thead>
                    <tr>
                     <th>
                            @Html.DisplayNameFor(model => model.EmployeeId)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CostCentreNumber)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.LastModifiedDate)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.LastModifiedBy)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.StatusId)
                        </th>
                                 
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody>
                    @* For ajax dataTable empty the tbody *@
                    @foreach (var item in Model) 
                    {
                       <tr>
                            <td>
   
                                @Html.DisplayFor(modelItem => item.EmployeeId)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.CostCentreNumber)
                            </td>                       
                            <td>
   
                                @item.CreatedDate.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @item.LastModifiedDate.ToEasyDateTimeFormat()
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.LastModifiedBy)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.StatusId)
                            </td>                       
                            <td>
                                <div class="btn-group-vertical">
                                    <a href="@Url.Action("Edit", new { id = item.EmployeeId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.EmployeeId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.EmployeeId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


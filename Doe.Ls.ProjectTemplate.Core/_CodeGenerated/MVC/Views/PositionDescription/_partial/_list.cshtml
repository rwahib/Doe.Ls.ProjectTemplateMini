 
 



@model IEnumerable<PositionDescription>
@{    
    ViewBagWrapper.InfoBag.SetTitle("Position description List",ViewData);
    var user = ViewBagWrapper.UserInfoExtensionBag.GetCurrentUser(ViewData);
    var task = ViewBagWrapper.TaskBag.GetCurrentTask(ViewData);
}


        <div class="table-responsive">
            <table class="table table-striped table-condensed dt-responsive @*ajaxDataTable*@" @*data-service="positionDescriptionService" data-url="@Url.Action("ListJson")"*@>
                @*<caption>Position description list</caption>*@
                <thead>
                    <tr>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.RolePositionDescription)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.BriefRoleStatement)
                        </th>
                                 
                     <th>
                            @Html.DisplayNameFor(model => model.StatementOfDuties)
                        </th>
                                 
                        <th class="all"></th>
                    </tr>
                </thead>
                <tbody>
                    @* For ajax dataTable empty the tbody *@
                    @foreach (var item in Model) 
                    {
                       <tr>
                            <td>
    
                                @Html.Raw(item.RolePositionDescription.Title.StripHtml().Minimise(50))
                            <td>
   
                                @Html.DisplayFor(modelItem => item.BriefRoleStatement)
                            </td>                       
                            <td>
   
                                @Html.DisplayFor(modelItem => item.StatementOfDuties)
                            </td>                       
                            <td>
                                <div class="btn-group-vertical">
                                    <a href="@Url.Action("Edit", new { id = item.PositionDescriptionId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.PositionDescriptionId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.PositionDescriptionId })" class="btn btn-primary pop-up"  data-toggle="modal" data-target="#vlePluginModal">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


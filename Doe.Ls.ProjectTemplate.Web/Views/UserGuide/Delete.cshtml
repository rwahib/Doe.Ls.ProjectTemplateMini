@model PageModel

@{
    ViewBag.Title = "Delete "+Model.Name;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<h3 class="text-danger">Are you sure you want to delete this file permenetly?</h3>

<div id="formTab" class="card.card-body">
    <form class="" role="form" method="POST" id="form-editor-delete">
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m=>m.Title)


        <p>
            <button type="submit" class="btn btn-primary">Delete</button>
            |
            <a href="@Url.Action("Display",new {page=@Model.Name})" class="btn btn-primary">Cancel &nbsp;<span class="glyphicon glyphicon-th-list"></span></a>
        </p>

        @Html.Raw(Model.Content)


        <p>
            <button type="submit" class="btn btn-primary">Delete</button>
            |
            <a href="@Url.Action("Display",new {page=@Model.Name})" class="btn btn-primary">Cancel &nbsp;<span class="glyphicon glyphicon-th-list"></span></a>
        </p>
    </form>
</div>


   